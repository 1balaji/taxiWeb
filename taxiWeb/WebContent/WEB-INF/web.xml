  <!-- Google Cloud Messaging -->
  
  <listener>
    <listener-class>
      com.taxi.gcm.ApiKeyInitializer
    </listener-class>
  </listener>
  
  <servlet>
    <servlet-name>DeviceRegisterServlet</servlet-name>
    <servlet-class>
      com.taxi.gcm.DeviceRegisterServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>DeviceRegisterServlet</servlet-name>
    <url-pattern>/registerDevice</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeviceUnregisterServlet</servlet-name>
    <servlet-class>
      com.taxi.gcm.DeviceUnregisterServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>DeviceUnregisterServlet</servlet-name>
    <url-pattern>/unregisterDevice</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SendAllMessagesServlet</servlet-name>
    <servlet-class>
      com.taxi.gcm.SendAllMessagesServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>SendAllMessagesServlet</servlet-name>
    <url-pattern>/sendAll</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>
      com.taxi.gcm.HomeServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  
</web-app>